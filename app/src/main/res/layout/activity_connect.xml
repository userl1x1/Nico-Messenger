<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F7"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to Device"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="30dp" />

    <!-- Информация о нашем устройстве -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#80FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Device"
            android:textColor="#007AFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/myIpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IP: Loading..."
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/deviceNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: Nico Device"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Ручной ввод IP -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manual Connection"
        android:textColor="#007AFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <EditText
            android:id="@+id/ipInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter IP address"
            android:background="@drawable/ios_input_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#8E8E93"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:textColor="#007AFF"
            android:background="@android:color/transparent"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Автоматическое обнаружение -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto Discovery"
        android:textColor="#007AFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <Button
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan for Devices"
        android:background="#007AFF"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Список обнаруженных устройств -->
    <TextView
        android:id="@+id/discoveredTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discovered Devices:"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/devicesLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#80FFFFFF"
        android:padding="8dp">

        <!-- Обнаруженные устройства будут добавляться сюда -->

    </LinearLayout>

    <!-- Статус -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready to connect..."
        android:textColor="#8E8E93"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingTop="16dp" />

</LinearLayout>
